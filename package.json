{
  "name": "@pkg-placeholder/monorepo",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "packageManager": "pnpm@10.14.0",
  "description": "_description_",
  "repository": {
    "type": "git",
    "url": "https://github.com/byronogis/pkg-placeholder.git"
  },
  "scripts": {
    "dev": "turbo run dev --filter='./packages/*'",
    "build": "turbo run build --filter='./packages/*'",
    "build:full": "turbo run build",
    "automd": "turbo run automd && pnpm run root:automd",
    "release": "bumpp -r && pnpm run -r release",
    "root:automd": "automd --input='README*.md' && node ./scripts/copy-readme.mjs",
    "root:lint": "eslint .",
    "root:lint:fix": "eslint . --fix",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clear": "pnpx turbo run clear && pnpx rimraf -g '**/node_modules' '**/.turbo' '**/coverage'",
    "prepare": "simple-git-hooks"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:lint",
    "@pkg-placeholder/cli": "workspace:*",
    "@pkg-placeholder/shared": "workspace:*",
    "@pkg-placeholder/typescript-config": "workspace:*",
    "@types/node": "catalog:types",
    "@vitest/coverage-v8": "catalog:test",
    "automd": "catalog:deps",
    "bumpp": "catalog:deps",
    "eslint": "catalog:lint",
    "jiti": "catalog:deps",
    "lint-staged": "catalog:lint",
    "rimraf": "catalog:deps",
    "simple-git-hooks": "catalog:lint",
    "tinyglobby": "catalog:deps",
    "turbo": "latest",
    "typescript": "catalog:deps",
    "unbuild": "catalog:build",
    "vitest": "catalog:test"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
